<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="544.0" prefWidth="650.0" spacing="20" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.evtools2.converterController">

    <HBox alignment="CENTER_LEFT" prefHeight="67.0" prefWidth="570.0">
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#openMainMenu" styleClass="back-button" text="Back ←" />
    </HBox>
    <GridPane hgap="10" prefHeight="196.0" prefWidth="570.0" styleClass="input-grid" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label styleClass="input-label" text="        US Odds" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="usOddsField" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label styleClass="input-label" text="    Decimal Odds" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField fx:id="decimalOddsField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label contentDisplay="CENTER" styleClass="input-label" text="  Fractional Odds" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="fractionalOddsField" styleClass="input-field" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    </GridPane>
</VBox>
