<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="TOP_CENTER" spacing="10.0">
        <TextField fx:id="numberField" styleClass="input-field" />
        <Button fx:id="addButton" text="Add"  />
    </HBox>
    <TableView fx:id="numberTable" styleClass="number-table">
        <columns>
            <TableColumn text="Number" fx:id="numberColumn" styleClass="number-column" />
        </columns>
    </TableView>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Payout:" styleClass="percentage-label" />
        <TextField fx:id="percentageField" styleClass="percentage-field" />
    </HBox>
</VBox>
